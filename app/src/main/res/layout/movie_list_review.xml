<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_authorReview"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:fontFamily="monospace"
        android:textSize="18sp"
        tools:text="Andres Gomez"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_contentReview"
        style="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:fontFamily="monospace"
        android:textSize="12sp"
        tools:text="The minions are a nice idea and the animation and London recreation is really good, but that's about it."
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_authorReview"
        android:layout_marginLeft="-8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_authorReview" />


</android.support.constraint.ConstraintLayout>